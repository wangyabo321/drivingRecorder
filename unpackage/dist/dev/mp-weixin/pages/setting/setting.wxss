.settingWrap {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.settingWrap .settingTitle {
  color: #000;
  font-size: 13px;
  font-weight: bold;
  padding: 5rpx 0 5rpx 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: #ddd;
}
.settingWrap .deviceName {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 12px;
  height: 60rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #ddd;
}
.settingWrap .deviceName .moreIcon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.settingWrap .deviceName .moreIcon .moreImg {
  width: 30rpx;
  margin-left: 10rpx;
}
